{
  "name": "Airflow-ClickHouse Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },  // Or another Python version
  "customizations": {
  "vscode": {
    "extensions": [
      "ms-python.python",
      "ms-azuretools.vscode-docker",
      "tabnine.tabnine-vscode"
      ],
    "settings": {
      "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },
  "forwardPorts": [8080],  // For Airflow UI
  "postCreateCommand": "pip install -r requirements.txt && airflow db init",  // Initialize Airflow DB
  "postStartCommand": "airflow webserver --port 8080 --daemon && airflow scheduler --daemon"  // Start Airflow services
}
