{
  "name": "Airflow-ClickHouse Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },
  "forwardPorts": [8080],
  "postCreateCommand": "pip install -r requirements.txt && airflow db init",
  "postStartCommand": "airflow webserver --port 8080 --daemon && airflow scheduler --daemon"
}
